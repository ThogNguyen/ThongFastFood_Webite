<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>Thong Fast Food</title>
    <!-- General CSS Files -->
    <link rel="stylesheet" href="~/assets/css/app.min.css">
    <!-- Template CSS -->
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="~/assets/css/components.css">
    <!-- Custom style CSS -->
    <link rel="stylesheet" href="~/assets/css/custom.css">
    <link rel='shortcut icon' type='image/x-icon' href='~/assets/img/favicon.ico' />

</head>

<body>
    <div class="loader"></div>
    <div id="app">
        <div class="main-wrapper main-wrapper-1">
            @* Navbar left *@
            <nav class="navbar navbar-expand-lg main-navbar sticky">
                <div class="form-inline mr-auto">
                    <ul class="navbar-nav mr-3">
                        <li>
                            <a href="#" data-toggle="sidebar" class="nav-link nav-link-lg collapse-btn"> <i data-feather="align-justify"></i></a>
                        </li>
                        <li>
                            <a href="#" class="nav-link nav-link-lg fullscreen-btn">
                                <i data-feather="maximize"></i>
                            </a>
                        </li>
                    </ul>
                </div>
                <ul class="navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" data-toggle="dropdown"
                           class="nav-link dropdown-toggle nav-link-lg nav-link-user">
                            <img alt="image" src="~/img/avatar.jpg"
                                 class="user-img-radious-style"> <span class="d-sm-none d-lg-inline-block"></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right pullDown">
                            <div class="dropdown-title">Hello Admin</div>
                        </div>
                    </li>
                </ul>
            </nav>


            <div class="main-sidebar sidebar-style-2">
                <aside id="sidebar-wrapper">
                    <div class="sidebar-brand">
                        <a asp-area="" asp-controller="MainPage" asp-action="Index">
                            <span class="logo-name">Thong FastFood</span>
                        </a>
                    </div>
                    <ul class="sidebar-menu">
                        <li class="menu-header">Danh mục </li>

                        <li><a class="nav-link" asp-area="Admin" asp-controller="AdminQLProduct" asp-action="Product"><i data-feather="package"></i><span>Quản Lí Sản Phẩm</span></a></li>
                        <li><a class="nav-link" asp-area="Admin" asp-controller="AdminQLCategory" asp-action="Category"><i data-feather="list"></i><span>Quản Lí Loại Sản Phẩm</span></a></li>
                        <li><a class="nav-link" asp-area="Admin" asp-controller="AdminQLOrder" asp-action="Order"><i data-feather="shopping-bag"></i><span>Quản Lí Đơn Hàng</span></a></li>
                        <li class="dropdown">
                            <a href="#" class="menu-toggle nav-link has-dropdown">
                                <i data-feather="shopping-bag"></i><span>Quản Lí Người Dùng</span>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="nav-link" asp-area="Admin" asp-controller="AdminQLUserData" asp-action="User"><i data-feather="users"></i><span>Quản Lí Người Dùng</span></a></li>
                                <li><a class="nav-link" asp-area="Admin" asp-controller="Role" asp-action="Role"><i data-feather="users"></i><span>Vai Trò</span></a></li>
                                <li><a class="nav-link" asp-area="Admin" asp-controller="RoleManager" asp-action="RoleManager"><i data-feather="users"></i><span>Quản Lí Vai Trò</span></a></li>
                            </ul>
                        </li>
                    </ul>
                </aside>
            </div>
            <!-- Main Content -->
            <div class="main-content">
                <section class="section">
                    @RenderBody()
                </section>

            </div>
        </div>
    </div>
    <!-- General JS Scripts -->
    <script src="~/assets/js/app.min.js"></script>
    <!-- JS Libraies -->
    <script src="~/assets/bundles/apexcharts/apexcharts.min.js"></script>
    <!-- Page Specific JS File -->
    <script src="~/assets/js/page/index.js"></script>
    <!-- Template JS File -->
    <script src="~/assets/js/scripts.js"></script>
    <!-- Custom JS File -->
    <script src="~/assets/js/custom.js"></script>

    @await Component.InvokeAsync("Notyf")
    @await RenderSectionAsync("Scripts", required: false)    

</body>


